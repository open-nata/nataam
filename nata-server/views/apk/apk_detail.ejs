<% include ../partials/header %>

<div id="apks">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">应用信息</h3>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>应用名称</dt>
                            <dd><span class="label label-primary"><%= apk.name %></span>
                            </dd>
                            <dt>应用版本</dt>
                            <dd><%= apk.version %></dd>
                            <dt>包名</dt>
                            <dd><%= apk.package_name%></dd>
                            <dt>启动Activity</dt>
                            <dd><%= apk.activity_name%></dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">最短Act路径</h3>
                    </div>
                    <table class="table table-hover ">
                        <thead>
                        <tr>
                            <th>
                                启动Act名
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                        </thead>
                        <tbody id="act_table">
                        <% apk.actpaths.forEach(function(actpath){ %>
                        <tr>
                            <td>
                                <%= actpath.activity%>
                            </td>
                            <td>
                                <a href="/apks/<%= apk.id %>/replay/<%= actpath.activity %>" class="btn btn-primary btn-xs" role="button">回放</a>

                                <a href="#" class="btn-del-actpath btn btn-danger btn-xs" role="button" data-id="<%= apk.id %>" data-act="<%= actpath.activity %>">删除</a>
                            </td>
                        </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/apk_detail.js"></script>
<% include ../partials/footer.ejs %>